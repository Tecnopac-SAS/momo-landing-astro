---
import Header from "../components/Header.astro";
import "@fontsource-variable/red-hat-display";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="md:w-[100%] overflow-x-hidden"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Stacion";
    src: url("/fonts/light/Stacion-Light.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  body {
    background-color: #2e418e;
    color: #edebdf;
    font-family: "Red Hat Display Variable", sans-serif;
    font-weight: 600;
  }
</style>
