---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";
import { Image } from "astro:assets";
import Test from "../../public/images/test.png";

interface Props {
  imageUrl: string | ImageMetadata;
  name: string;
  description: string;
}
const { imageUrl, name, description } = Astro.props;

const Img = await getImage({
  src: imageUrl,
});
---

<div class="w-72 h-96">
  <Image
    src={Test}
    alt={name}
    inferSize={true}
    class="rounded-md shadow-2xl w-[270px] h-[270px]"
  />

  <div>
    <h4 class="text-lg text-blue-800 font-bold pb-2">{name}</h4>
    <p class="text-black text-lg">
      {description}
    </p>
  </div>
</div>
