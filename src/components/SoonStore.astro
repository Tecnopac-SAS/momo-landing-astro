---
import { Image } from "astro:assets";
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<div class="bg-[#EDEBDF] m-auto w-80 p-5 rounded-lg">
  <Image
    loading="eager"
    width={300}
    height={190}
    src="/images/hero.jpeg"
    alt="store"
    class="rounded-lg pb-2"
  />

  <h3 class="text-xl uppercase text-black font-bold text-center">
    {name}
  </h3>

  <>
    <div class="flex justify-center gap-x-2">
      <img
        src="/locate.svg"
        alt="locación"
      />
    </div>
    <p class="text-black font-thin text-center">Próximamente</p>


    <div class="flex justify-center pt-2">
      <button class="bg-[#FF6010] px-4 py-2 rounded-lg">Por anunciar</button>
    </div>
  </>
</div>
